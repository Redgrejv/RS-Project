<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <title><% blocks.title%></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

</head>
<body>

<header>
    <%-blocks.header %>
</header>

<section class="container">

    <nav class="navbar navbar-default" role="navigation">
        <ul class="nav navbar-nav">
            <li><a href="/"> Главная</a></li>
            <li><a href="/api/login">Войти</a></li>
            <li><a href="/api/register">Регистрация</a></li>
            <li><a href="/api/info/version">Версия</a></li>
        </ul>
    </nav>

    <h1>Введите данные</h1>
    <form name="user">
        <label>Логин</label></br>
        <input type="text" name="login" /></br>
        <label>Пароль</label></br>
        <input type="password" name="password"><br/>
        <input type="submit" value="Отправить" /><br/>
        <span class="error"></span>
    </form>

    <script>
        function error(jqXHR) {
            var err = jqXHR.responseText;
            $('.error', document.forms['user']).html(err);
        }

        $(document.forms['user']).on('submit', function (event) {
            event.preventDefault();
            var form = $(this);

            $('.error', form).html('');

            $.ajax({
                url: '/api/login',
                method: "POST",
                data: form.serialize(),
                statusCode: {
                    200: function (data) {
                        $('.error').html(data);
                    },
                    403: error,
                    404: error,
                    500: error
                }
            });
            return false;
        });
    </script>

</section>

<footer>
</footer>
</body>
</html>
